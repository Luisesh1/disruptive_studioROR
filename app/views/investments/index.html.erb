<div class="row">
  <div class="card">
    <div class="container">
      <br>
      <h5 class="center-align">Calculadora de inversion</h5>
      <br>
    </div>
  </div>
</div>
<div class="row">
  <%@cryptoCurrencys.each do |currency|%>
    <% assetBalance = currency.calculateAssetBalance(@assetsInfo[currency.name][:price])%>
    <div class="col s12 m4">
      <div class="card darken-1">
        <div class="card-content">
          <span class="card-title center-align">Proyecion de <%= currency.name%></span>
          <p>
          <div class="row">
            <div class=" col s12 m6 l6 offset-m3 offset-l3 ">
              <%=image_tag @assetsInfo[currency.name][:iconUrl], alt: 'Icono de ' + currency.name,  class: "responsive-img center-align"%>
            </div>
          </div>
              <div class="row">
                <div class="input-field col s12 m12 l12">
                  <input id="first_name2" type="text" class="validate" value=<%= currency.initialBalance%>>
                  <label class="active" for="first_name2">Cantidad a Invertir</label>
                </div>
              </div>
              <p> interes Mensual: <b> <%= currency.monthlyInterest%>% </b> </p>
              <p id="invAnualEarns"> ganancia Anual: <b> <%= currency.calculateEarns%> </b> </p>
              <p id="invAssetEquivalence"> Equivalencia en <%= currency.name%>: <b> <%= assetBalance %> </b> </p>
          </p>
        </div>
      </div>
    </div>
  <%end%>
</div>

<div class="row">
  <div class="col s12 m12">
      <div class="card darken-1">
        <div class="card-content">
          <span class="card-title">Lista de activos</span>
          <table class="striped">
            <thead>
              <tr>
                <th>Nombre</th>
                <th>abreviatura</th>
                <th>precio en dolares</th>
              </tr>
            </thead>

            <tbody>
              <% @assetsInfo.each do |asset|%>
                <tr>
                  <td><%= asset[1][:name] %></td>
                  <td><%= asset[1][:assetId] %></td>
                  <td class="price" id= "<%= asset[1][:assetId]%>"><%= asset[1][:price] %></td>
                  <td><%= image_tag asset[1][:iconUrl], alt: 'Icono de ' +  asset[1][:name],  class: "responsive-img icono-52px"  %></td>
                </tr>
              <% end%>
            </tbody>
          </table>
        </div>
      </div>
    </div>
</div>

<style>
  .icono-52px {
    width: 52px;
  }
</style>

<%= stylesheet_link_tag "index", media: "all" %>