      <div class="card darken-1">
        <div class="card-content">
          <span class="card-title">Proyecion de <%= currency.name%></span>
          <p>
              <div class="row">
                <div class="input-field col s6">
                  <input id="first_name2" type="text" class="validate" value=<%= currency.initialBalance%>>
