<div class="row">
  <div class="card">
    <div class="container">
      <br>
      <h5 class="center-align">Calculadora de inversion</h5>
      <br>
    </div>
  </div>
</div>
<div class="row">
  <%@assetsInfo.each do |asset|%>
    <div class="col s12 m4">
      <div class="card darken-1">
        <div class="card-content">
          <span class="card-title center-align">Proyecion de <%= asset[:name]%></span>
          <p>
          <div class="row">
            <div class=" col s12 m6 l6 offset-m3 offset-l3 ">
              <%=image_tag asset[:iconUrl], alt: 'Icono de ' + asset[:name],  class: "responsive-img center-align"%>
            </div>
          </div>
              <div class="row">
                <div class="input-field col s12 m12 l12">
                  <input data-id="<%= asset[:currencyId]%>" type="number" class="balanceInput" value=<%= asset[:initialBalance]%>>
                  <label class="active" for="first_name2">Cantidad a Invertir</label>
                </div>
              </div>
              <p> interes Mensual: <b> <%= asset[:monthlyInterest]%>% </b> </p>
              <p> ganancia Anual: <b id="earns_<%= asset[:currencyId]%>" > <%= asset[:earns]%> </b> </p>
              <p> Equivalencia en <%= asset[:name]%>: <b id="assetBalance_<%= asset[:currencyId]%>"> <%= asset[:assetBalance] %> </b> </p>
          </p>
        </div>
      </div>
    </div>
  <%end%>
</div>

<div class="row">
  <div class="col s12 m12">
      <div class="card darken-1">
        <div class="card-content">
          <span class="card-title">Lista de activos</span>
          <table class="striped">
            <thead>
              <tr>
                <th>Nombre</th>
                <th>abreviatura</th>
                <th>precio en dolares</th>
              </tr>
            </thead>

            <tbody>
              <% @assetsInfo.each do |asset|%>
                <tr>
                  <td><%= asset[:name] %></td>
                  <td><%= asset[:assetId] %></td>
                  <td id= "COINBASE_SPOT_<%= asset[:assetId] %>_USD"><%= asset[:price] %></td>
                  <td><%= image_tag asset[:iconUrl], alt: 'Icono de ' +  asset[:name],  class: "responsive-img icono-52px"  %></td>
                </tr>
              <% end%>
            </tbody>
          </table>
        </div>
      </div>
    </div>
</div>

<style>
  .icono-52px {
    width: 52px;
  }
</style>

<%= stylesheet_link_tag "index", media: "all" %>